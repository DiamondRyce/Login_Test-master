<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context="com.example.patrick.login_test.Register">

    <TextView
        android:id="@+id/Username"
        android:layout_height="wrap_content"
        android:text="StudentID"
        android:layout_width="wrap_content"/>
    <EditText
        android:id="@+id/Usernamefield"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username"/>
    <TextView
        android:id="@+id/PasswordName"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_below="@+id/Usernamefield"/>

    <EditText
        android:id="@+id/Passfield"
        android:layout_below="@+id/PasswordName"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/building"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/Passfield"/>
    <Spinner
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/building"/>
    <TextView
        android:id="@+id/roomnumber"
        android:layout_height="wrap_content"
        android:text="Room Number"
        android:layout_width="wrap_content"
        android:layout_below="@+id/school"/>
    <EditText
        android:id="@+id/CVRoomNumber"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomnumber"/>
    <Button
        android:id="@+id/register"
        android:layout_height="wrap_content"
        android:text="register"
        android:layout_width="match_parent"
        android:layout_below="@+id/CVRoomNumber"/>
</RelativeLayout>
